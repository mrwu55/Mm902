<layout >
    <data class = "MineBinding">
        <variable name="listener"  type="yty.gxjy.com.mmxxx.Interface.MmClickListener"/>
    </data>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/ebeb"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/ebeb"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/f13c5d"
            android:text="我的"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="48dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/white"
            android:orientation="vertical">
            <yty.gxjy.com.mmxxx.Util.XCRoundImageView
                android:layout_width="90dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/c1"
                android:layout_gravity="center_horizontal"
                android:layout_height="90dp" />
            <TextView
                android:id="@+id/mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="11dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:text="我是大佬"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="9dp"
                android:gravity="center_horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/mine_vipName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="会员名：超级会员"
                    />
                <LinearLayout
                    android:id="@+id/ll_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{listener::onClick}"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="充值"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/f13c5d"
                        android:text="VIP"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_person"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/m1"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="个人资料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_watched"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/m2"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="最近浏览"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_jihuocode"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/m3"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="输入激活码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_changeps"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/mine_changepss"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_connect"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/m4"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="联系客服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_updatesoft"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/m5"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="版本升级"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:onClick="@{listener::onClick}"
            android:id="@+id/mine_callback"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="16dp"
                android:background="@mipmap/m6"
                android:layout_height="16dp" />
            <TextView
                android:layout_marginLeft="46dp"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:text="意见反馈"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="19dp"
                android:background="@mipmap/mine_click"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mine_tv_exit"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="343dp"
                android:background="@drawable/login_btn"
                android:text="退出"
                android:onClick="@{listener::onClick}"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_height="36dp" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</layout>

