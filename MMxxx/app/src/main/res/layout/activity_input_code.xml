<layout>
    <data class="InputCodeClass">
        <variable name="listener"  type="yty.gxjy.com.mmxxx.Interface.MmClickListener"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/ebeb"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".Activity.PersonDataActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/f13c5d">
            <RelativeLayout
                android:id="@+id/re_code_back"
                android:layout_width="60dp"
                android:onClick="@{listener::onClick}"
                android:paddingLeft="15dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/back"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="激活码"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:background="@color/f13c5d"/>
        </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:paddingLeft="15dp"
          android:orientation="horizontal"
          android:layout_marginTop="11dp"
          android:background="@color/white"
          android:layout_height="49dp">
          <EditText
              android:background="@null"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:textSize="13dp"
              android:singleLine="true"
              android:textColor="#565656"
              android:hint="请在此输入激活码"/>
          <Button
              android:id="@+id/btn_code_sure"
              android:layout_width="79dp"
              android:layout_height="match_parent"
              android:text="确定"
              android:onClick="@{listener::onClick}"
              android:textColor="@color/white"
              android:textSize="13dp"
              android:background="@color/f13c5d"/>
      </LinearLayout>
    </LinearLayout>

</layout>